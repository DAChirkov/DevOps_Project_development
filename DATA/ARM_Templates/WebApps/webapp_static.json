{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
          "type": "string",
          "defaultValue": "[resourceGroup().location]"
        },  
        "vaultResourceGroupName": {
          "type": "string",
          "defaultValue": "[resourceGroup().name]"
        },
        "vaultName": {
          "type": "string"
        },
        "secretName": {
          "type": "string"
        },
        "vaultSubscription": {
          "type": "string",
          "defaultValue": "[subscription().subscriptionId]"
        }
    },
    "resources": [
      {
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2020-10-01",
        "name": "StaticWebApp",
        "properties": {
          "mode": "Incremental",
          "expressionEvaluationOptions": {
            "scope": "inner"
          },
          "template": {
            "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
                "NameApp": {
                    "type": "string", 
                    "defaultValue": "static_web_app"
                },
                "nameAppShow": {
                    "type": "string",
                    "defaultValue": "[toLower(format('{0}-{1}', parameters('NameApp'), uniqueString(resourceGroup().id), parameters('repositoryUrl')))]"
                },
                "sku": {
                    "type": "string", 
                    "defaultValue": "Free"
                },
                "skucode": {
                    "type": "string", 
                    "defaultValue": "Free"
                },
                "repositoryUrl": {
                    "type": "string",
                    "defaultValue": "https://github.com/DAChirkov/Static_WebApp"
                },
                "branch": {
                    "type": "string",
                    "defaultValue": "main"
                },
                "repositoryToken": {
                    "type": "securestring"
                },
                "appLocation": {
                    "type": "string", 
                    "defaultValue": "/"
                },
                "apiLocation": {
                    "type": "string", 
                    "defaultValue": ""
                },
                "appArtifactLocation": {
                    "type": "string", 
                    "defaultValue": "/"
                },
                "location": {
                    "type": "string",
                    "defaultValue": "[resourceGroup().location]"
                }
            },
            "variables": {
            },
            "resources": [
              {
                "apiVersion": "2021-01-01",
                "name": "[parameters('nameAppShow')]",
                "type": "Microsoft.Web/staticSites",
                "location": "[parameters('location')]",
                    "properties": {
                        "repositoryUrl": "[parameters('repositoryUrl')]",
                        "branch": "[parameters('branch')]",
                        "repositoryToken": "[parameters('repositoryToken')]",
                        "buildProperties": {
                            "appLocation": "[parameters('appLocation')]",
                            "apiLocation": "[parameters('apiLocation')]",
                            "appArtifactLocation": "[parameters('appArtifactLocation')]"
                        }
                    },
                "sku": {
                    "Tier": "[parameters('sku')]",
                    "Name": "[parameters('skuCode')]"
                }
              }
            ],
            "outputs": {
                "DNSName": {
                    "type": "string",
                    "value": "[reference(parameters('nameAppShow')).defaultHostName]"
                }
            }
          },
          "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "repositoryToken": {
                "reference": {
                    "keyVault": {
                        "id": "[resourceId(parameters('vaultSubscription'), parameters('vaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                },
                "secretName": "[parameters('secretName')]"
              }
            }
          }
        }
      }
    ]
  }