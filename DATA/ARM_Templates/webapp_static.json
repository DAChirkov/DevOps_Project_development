{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
      "metadata": {
        "_generator": {
            "name": "bicep",
            "version": "0.17.1.54307",
            "templateHash": "11453007703022839041"
        }
      },
    "parameters": {
        "preNameApp": {
            "type": "string",
            "defaultValue": "static_web_app"
        },
        "nameApp": {
            "type": "string",
            "defaultValue" : "[toLower(format('{0}-{1}', parameters('preNameApp'), uniqueString(resourceGroup().id), parameters('repositoryUrl')))]"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "sku": {
            "type": "string",
            "defaultValue": "Free"
        },
        "skucode": {
            "type": "string",
            "defaultValue": "Free"
        },
        "repositoryUrl": {
            "type": "string"
        },
        "branch": {
            "type": "string"
        },
        "appLocation": {
            "type": "string",
            "defaultValue": "/"
        },
        "apiLocation": {
            "type": "string",
            "defaultValue": ""
        },
        "appArtifactLocation": {
            "type": "string",
            "defaultValue": "/"
        }
    },
    "variables": {
        "resourceId": "[resourceId('Microsoft.Web/staticSites/', parameters('nameApp'))]"
    },
    "resources": [
        {
            "apiVersion": "2021-01-01",
            "name": "[parameters('nameApp')]",
            "type": "Microsoft.Web/staticSites",
            "location": "[parameters('location')]",
            "properties": {
                "repositoryUrl": "[parameters('repositoryUrl')]",
                "branch": "[parameters('branch')]",
                "buildProperties": {
                    "appLocation": "[parameters('appLocation')]",
                    "apiLocation": "[parameters('apiLocation')]",
                    "appArtifactLocation": "[parameters('appArtifactLocation')]"
                }
            },
            "sku": {
                "Tier": "[parameters('sku')]",
                "Name": "[parameters('skuCode')]"
            }
        }
    ],
        "outputs": {
        "DNSName": {
            "type": "string",
            "value": "[reference(parameters('nameApp')).defaultHostName]"
        },
        "deploymentToken": {
            "type": "string",
            "value": "[listSecrets(variables('resourceId'), '2019-08-01').properties.apiKey]"
        }
    } 
}